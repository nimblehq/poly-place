<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Splash Screen Theme. -->
    <style name="Theme.AppSplash" parent="Theme.SplashScreen">
        <item name="windowSplashScreenBackground">@color/violent_violet</item>
        <item name="windowSplashScreenAnimatedIcon">@drawable/ic_logo_splash</item>
        <item name="windowSplashScreenAnimationDuration">1000</item>
        <item name="postSplashScreenTheme">@style/Theme.AppCompat.Light.NoActionBar</item>

        <!-- Status bar and Nav bar configs -->
        <item name="android:statusBarColor">@color/violent_violet</item>
        <item name="android:navigationBarColor">@color/violent_violet</item>
        <item name="android:windowLightStatusBar">false</item>
    </style>
</resources>
